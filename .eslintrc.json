{
  "root": true,
  "extends": ["@kristiandupont"],
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "createDefaultProgram": true,
        "project": "./tsconfig.json"
      }
    }
  ],
  "rules": {
    "@typescript-eslint/prefer-nullish-coalescing": "off"
  }
}
